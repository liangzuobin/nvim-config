{
  "languageserver": {
    "go": {
      "command": "gopls",
      "rootPatterns": [
        "go.mod",
        "go.work",
        ".git/",
        ".hg"
      ],
      "filetypes": [
        "go"
      ],
      "initializationOptions": {
        "buildFlags": [
          "-tags"
        ],
        "directoryFilters": [
          "-**/node_modules"
        ],
        "usePlaceholders": false,
        "gofumpt": true
      }
    }
  }
}